.poke-card-content
	
	img
		max-width 80%
		
	ul
		margin 0
		text-align left
		padding-left 1.2rem
	  
	  li
			position relative
			list-style-type none
			margin-bottom 0.5rem

		li:before
			content ''
			display block
			position absolute
			left -15px
			top -2px
			width 5px
			height 11px
			border-width 0 2px 2px 0
			border-style solid
			border-color #00a8a8
			transform-origin bottom left
			transform rotate(45deg)

.poke-card-type
	padding 10px
	text-align left
	display flex
	justify-content center
	
.poke-card-header
	background-color #a3cacc
	padding 6px 0 0 0
	height 40px
	
	h3
		font-family 'Bangers', cursive
		margin 0
	
.poke-card-footer
	padding 6px 0 0 0
	height 40px
	
	&:hover
		background-color #a3cacc
		transition all 0.6s linear
