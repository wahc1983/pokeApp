.container-pokemon-details
	display grid
	grid-template-areas 'back''header''content''footer'
	grid-template-rows auto 1fr 2fr 1fr
	height 100%
	
	h4
		border 2px solid #3a6c6e
		background #5f9ea0		

.back-inicio
	grid-area back
	padding 0 20px
	
.header-pokemon-details
	grid-area header
	display flex
	flex-direction column
	align-items center
	font-size 30px
	font-family 'Bangers', cursive
	
	div
		margin 5px

.content-pokemon-details
	grid-area content
	display grid
	grid-template-areas '. . .'
	
	.first-content
		display flex
		justify-content center
	
	img
		padding 0 10px
		width 30%
		height auto
		
	ul
		columns 2
		padding 2px
		margin-left 5px

		li
			padding-right 20px
			list-style-type: none;
	
.footer-pokemon-details
	grid-area footer
	display flex
	justify-content center
	text-align center
	padding 15px
	
	span
		display block
		padding 5px

	.header
		border-left 1px solid #3a6c6e
		border-right 1px solid #3a6c6e