.sidebar-container
	display grid
	height 100vh
	grid-template-rows 120px 4fr 82px
	grid-template-areas "sidebarTop""sidebarContent""sidebarBottom"
	
	img
		width 80px
		height 80px

.sidebar-top
	grid-area sidebarTop
	padding-top 20px
	display flex
	justify-content center

.sidebar-content
	grid-area sidebarContent

.sidebar-bottom
	grid-area sidebarBottom
	
.sidebar-nav
	height 100%
	width 100%
	overflow hidden
	font-family 'Bangers', cursive

	ul
		list-style none
		display block
		padding 0
		margin 0

		li
			margin-left 0
			padding-left 0
			display inline-block
			width 100%

			div
				padding 20px 0 20px 40px

			a
				color rgba(255,255,255,0.9)
				font-size 1.4em
			
			&:hover
				background-color rgba(0,0,0,0.9)
				transition all 0.6s linear

			i
				color red
				padding 0 10px
				font-size 18px

.rotate-center
	-webkit-animation rotate-center 6s ease-in-out infinite both
	        animation rotate-center 6s ease-in-out infinite both

